{
  "name": "opus-sync",
  "version": "1.0.0",
  "description": "Opus audio syncing service with transcoding to MP3/WAV",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "worker": "node src/queue/worker.js",
    "migrate": "node scripts/run-migrations.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest tests/unit",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest tests/integration --runInBand",
    "lint": "eslint src tests"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.500.0",
    "@aws-sdk/lib-storage": "^3.500.0",
    "bullmq": "^5.1.0",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "eslint": "^8.56.0"
  },
  "keywords": ["opus", "audio", "transcoding", "s3", "bullmq"]
}